<div class='container'>
<form>
  <div class="form-group">
    <h2>{{model.eid }}</h2>
  </div>
  <div class="form-group">
    <label for="name">Employee name</label><br>
    {{input type="text" id="name" value=model.name}}
  </div>
  <div class="form-group">
    <label for="mobile">Employee mobile</label><br>
    {{input type="number" id="mobile" value=model.mobile}}
  </div>
  <div class="form-group">
    <label for="email">Email address</label><br>
    {{input type="email" id="email" value=model.email}}
  </div>
  <div class="form-group">
    <label for="city">Employee City</label><br>
    {{input type="text" id="city" value=model.city}}
  </div>
  <div class="form-group">
    <label for="joining">Date Of Joining:</label><br>
    {{input type="date" id="joining" value=model.joining}}
  </div>
  <div class="form-group">
  <select onchange={{action "setSelection" value="target.value"}}>
  {{#each model.roles as |role|}}
    {{#if role.isChecked}}
      <option value={{role.value}} selected>{{role.value}}</option>
    {{else}}
    <option value={{role.value}}>{{role.value}}</option>
    {{/if}}
  {{/each}}
  </select>



  </div>
  <button type="submit" class="btn btn-success" {{action 'save'}}>Save</button>
</form>
</div>
