<form>
	<div class="form-group">
		<label for="name">Employee name</label><br>
    	{{input type="text" id="name" value=name}}
  </div>
  <div class="form-group">
    	<label for="password">Employee Pasword</label><br>
    	{{input type="password" id="password" value=password }}
	</div>
	<div class="form-group">
		<label for="mobile">Employee mobile</label><br>
    	{{input type="number" id="mobile" value=mobile}}
    </div>
	<div class="form-group">
		<label for="email">Email address</label><br>
    	{{input type="email" id="email" value=email}}
    </div>
	<div class="form-group">
		<label for="city">Employee City</label><br>
    	{{input type="text" id="city" value=city}}
    </div>
	<div class="form-group">
		<label for="joining">Date of Joining</label><br>
    	{{input type="date" id="joining" value=joining}}
	</div>
<div class="form-group">
	<label>Role</label>
	<select onchange={{action "setRole" value="target.value"}}>
		<option value="SuperAdmin" selected>SuperAdmin</option>
		<option value="Admin">Admin</option>
		<option value="Operator">Operator</option>
	</select>
</div>
	<button type="submit" class="btn btn-success" {{action 'addEmployee'}}>Add</button>
</form>
